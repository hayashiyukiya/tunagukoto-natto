<%#= render "mini_event_customers/new_main" %>

<!-- mini_eventの応募 -->
<div class="devise_pc">
<%= form_for @mini_event_customer, url: mini_event_mini_event_customers_path(mini_event_id: @mini_event.id) do |f| %>
<div class="container">
	<div class="row">
	    <div class="some_padding"></div>
	    <div class="apply_conform_title"> 申し込み確認</div>

	    <div class="step_now row">
	    	<div class="col-lg-1">
	    		<div class="link_triangle_small">
	    		▷
	    		</div>
	    	</div>
	    	<div class="col-lg-10"> Step1 入力事項確認</div>
		</div>

	    <div class="step_not_yet row">
	    	<div class="col-lg-1">
	    		<div class="link_triangle_small">
	    		▷
	    		</div>
	    	</div>
	    	<div class="col-lg-10">Step2 申し込み完了</div>
		</div>

		<div class="grey_box">
			イベントの確認
		</div>

		<div class="all_event_apply_box row">
			<div class="col-lg-12 event_title_customer">
				<%= @mini_event.title %>					
			</div>

			<div class="col-lg-2">
				開催日時:
			</div>
			<div class="col-lg-10">
				<%= @mini_event.time.year %>年
				<%= @mini_event.time.month %>月
				<%= @mini_event.time.day %>日
				<%= @mini_event.time_detail %>
			</div>
			<div class="col-lg-2">
				場所:
			</div>
			<div class="col-lg-10">
				<%= @mini_event.locate %>
			</div>
			<% if !@mini_event.pay_point.nil? %>
				<div class="col-lg-2">
					参加費:
				</div>
				<div class="col-lg-3">
					<%= @mini_event.pay_point %>(円またはpt) 
					<span class="attention_mark">※注意</span>
				</div>
			<% end %>
			<% if !@mini_event.get_point.nil? %>
				<div class="col-lg-2">
					獲得ポイント:
				</div>
				<div class="col-lg-3">
					<%= @mini_event.get_point %>pt
				</div>
			<% end %>

			<% if !@mini_event.pay_point.nil? %>
			<div class="attention_box">
				<div class="attention_mark">※注意</div>
				<div class="attention_body">
				・参加費とは当イベント(<%= @mini_event.title %>)に参加するために、事前に必要な費用になります。<br>
				・参加費のお支払い方法は現金かポイントの2種類があります<br>
				・ポイントの場合は以下の応募ボタンをクリックし応募が完了となりましたら<%= current_student.first_name %>様の所持ポイントから参加費分を引落とさせていただきます。<br>
				・現金を選ばれた場合はイベント当日に運営スタップに参加費をお支払いください。<br>
				・ポイントで参加費をお支払られ応募が完了されたイベントをキャンセルされましても、参加費分のポイントは返却できません。<br>
				ご了承ください。<br>
				※1pt(ポイント)は1円分になります。
				</div>
			</div>
			<% end %>
		</div>

		<% if student_signed_in? %>
			<div class="your_point_box">
				<%= current_student.first_name %> <%= current_student.last_name %>さんのポイント
			</div>
			<div class="all_event_apply_box row">
				<div class="col-lg-3">
					現在保有のポイント:
				</div>
				<div class="col-lg-9">
					<%= current_student.point.having_point %>pt
				</div>
				<div class="col-lg-3">
					累計獲得ポイント:
				</div>
				<div class="col-lg-9">
					<%= current_student.point.max_point %>pt
				</div>
			</div>			
			<div class="pay_way">
				お支払い方法の選択
			</div>

			<% if !@mini_event.pay_point.nil? %>

				<% if current_student.point.having_point -  @mini_event.pay_point >= 0%>
					<select name="pay_way" class='form-control good_designed_select_box'>
					<option value="cash">現金</option>
					<option value="point">ポイント</option>
					</select>
				<% else %>
					<select name="pay_way" class='form-control good_designed_select_box'>
					<option value="cash">現金</option>
					</select>
				<% end %>
				<% else %>
					<select name="pay_way" class='form-control good_designed_select_box'>
					<option value="cash">現金</option>
					</select>
				<% end %>
		<% end %>
	</div>
</div>
<div class="padding-50"></div>
<div class="row width-60">
	<%= link_to "キャンセル", mini_event_path(@mini_event.id), class: "back_btn" %>
	<%=f.submit '申し込む', class: "apply_btn" %>
</div>
<% end %>
</div>

<%= render 'mini_event_customers/new_mobile' %>


