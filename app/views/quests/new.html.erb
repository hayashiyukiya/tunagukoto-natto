<% if admin_signed_in? %>
	<div class="container">
	<%= form_for @quest do |f| %>
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div>●<%= f.label :会社名 %></div>
				<%= f.text_field :company_name, placeholder: "", :size => "80%" %>
				<div>●<%= f.label :会社のロゴ画像 %></div>
				<%= f.file_field :company_logo, accept: "image/png, image/jpeg, image/gif" %>

				<div>●<%= f.label :クエストタイトル %></div>
				<%= f.text_field :title, placeholder: "", :size => "80%" %>
				<div>●<%= f.label :クエストの詳細 %> </div>
				<%= f.text_area :description, placeholder: "", :size => "80%"  %>

				<div>●<%= f.label :報酬 %></div>
				<%= f.text_field :gift, placeholder: "" %>

				<div>●<%= f.label :報酬詳細 %></div>
				<%= f.text_area :gift_detail, placeholder: "" %><br>

				●応募開催期間
		  		<%= f.date_select(
		        :closing, 
		        use_month_numbers: true,
		        start_year: Time.now.year,
		        end_year: (Time.now.year + 5),
		        default: Time.now,
		        date_separator: '/') %>まで

				<div>●<%=  f.label :希望納期 %></div>
				<%= f.text_field :dead_line, placeholder: "例)２０１９年12月20日予定", :size => "30*60" %>

				<div>●<%=  f.label :希望納期詳細詳細 %></div>
				<%= f.text_field :dead_line_detail , placeholder: "例)17:30", :size => "30*60" %>

				<div>●<%= f.label :クエストの詳細画像 %></div>
				<%= f.file_field :quest_image, accept: "image/png, image/jpeg, image/gif" %>

				<%=f.submit 'クエストを新しく作る', class: 'btn btn-primary btn-lg btn-block' %>
				</div>
			</div>
		<%end%>
	</div>
<% else %>
	<%= link_to "ホームに戻る", root_path %>
	<div class="page_not_found"> 404 page not found</div>
<% end %>