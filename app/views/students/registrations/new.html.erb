<h2>Sign up</h2>
<% if admin_signed_in? %>

  <p>あなたは今、管理者としてログインしています<br>
    一度ログアウトした後に新規登録のページに戻ってください
  </p>
  <%= link_to "サインアウトする", destroy_admin_session_path, method: :delete %>
<% else %>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :お名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  <div>
    <h2>大学</h2>
      <%= f.collection_radio_buttons(:school_id, School.all, :id, :school_name, include_hidden: false) do |b| %>
        <%= b.label { b.radio_button + b.text } %>
      <% end %>
  </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  </div>
  <% end %>

  <%= render "students/shared/links" %>

<% end %>