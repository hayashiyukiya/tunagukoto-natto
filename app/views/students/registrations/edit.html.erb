<h2>プロフィールを編集する <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :お名前 %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :専攻または学部 %><br />
    <%= f.text_field :major_subject, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :入学年度 %><br />
    <%= f.number_field :event_population ,min: 0 ,max:1000, step:5 %>年
  </div>

  <div class="field">
    <%= f.label :出身県 %><br />
    <%= f.text_field :home_town, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :所属の部活またはサークル %><br />
    <%= f.text_field :club, autofocus: true %>
  </div>  

  <div class="field">
    <%= f.label :出身県 %><br />
    <%= f.text_field :home_town, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :アルバイトやインターンの経験 %><br />
    <%= f.text_field :experienced_jobs, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :趣味や特技%><br />
    <%= f.text_field :hobbies, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :自分の長所や短所 %><br />
    <%= f.text_field :introduction, autofocus: true %>
  </div>


  <div class="field">
    <%= f.label :自由記入欄 %><br />
    <%= f.text_field :free_space , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :SNSのリンク %><br />
    <%= f.text_field :sns_url , autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <% f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><% @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <% f.label :password_confirmation %><br />
    <% f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <% f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <% f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "編集する",class:'btn btn-primary btn-lg' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "戻る", :back %>
