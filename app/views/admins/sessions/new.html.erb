<% if student_signed_in? %>
  <div>you are signed in as student<br>
    あなたは今、ログインしたままです。<br>
        管理者としてログインするのはまずログアウトしてください。<br>
        <%= link_to "ログアウトする" , destroy_student_session_path, method: :delete %>

    </div>
<% elsif corporation_signed_in? %>
  <div>あなたは今、ログインしたままです。<br>
    管理者としてログインするのはまずログアウトしてください。<br>
     <%= link_to "ログアウトする" , destroy_corporation_session_path, method: :delete %>
   </div>
<% else %>

<div class="container">
  <h2>管理者ログイン画面</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in",class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
  <%#= render "admins/shared/links" %>

<% end %>