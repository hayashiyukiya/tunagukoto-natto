<% if admin_signed_in? || student_signed_in? || corporation_signed_in? || student_group_signed_in? %>
<% else %>
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6">
      <h2>公益団体新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :団体名 %><br />
          <%= f.text_field :name_ja, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :活動内容 %><br />
          <%= f.text_area :activity_detail_ja %>
        </div>

        <div class="field">
          <%= f.label :活動実績 %><br />
          <%= f.text_area :performance_ja %>
        </div>

        <div class="field">
          <%= f.label :ホームページリンク %><br />
          <%= f.text_field :home_page_url %>
        </div>

        <div class="field">
          <%= f.label :プロフィール画像 %><br />
          <%= f.file_field :top_img %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
      </div>
    <div class="col-lg-3">
    </div>
  </div>
  <%= render "non_profit_organizations/shared/links" %>
<% end %>