	<div class="color-white padding-20 margin-30">
		<div class="mobile_company_title">
			<%= @event.event_company_name %>って何してる会社？
		</div>
		<p class="mobile_company_text">
			<%= @event.event_description %>
		</p>
	</div>

	<div class="color-white padding-20 margin-30">
		<div class="mobile_company_title">
			登壇者情報
		</div>
		<div class="row">
			<div class="width_fifth padding-20">
				<div class="aligen_center">
					<%= @event.position %>					
				</div>
				<div class="aligen_center">
					<%= @event.event_president %>
				</div>
				<div class="aligen_center">
					<%= @event.event_president_birth_day %>
				</div>
				<div class="aligen_center">
					<%= @event.event_motto %>
				</div>
			</div>
			<div class="width_fifth">
				<% if @event.president_image.attached? %>
				    <%= image_tag @event.president_image , class: "president_img"%>
				<% end %>
			</div>
		</div>
	</div>

	<div class="color-white padding-20 margin-30">
		<div class="padding_some"></div>
		<div class="mobile_company_title">
			コンテンツ
		</div>

		<% if !@event.content_one.nil?%>
			1.<%= @event.content_one %><br>
		<% end %>
		<% if !@event.content_two.nil?%>
			2.<%= @event.content_two %><br>
		<% end %>
		<% if !@event.content_three.nil?%>
			3.<%= @event.content_three %><br>
		<% end %>
		<% if !@event.content_four.nil?%>
			4.<%= @event.content_four %><br>
		<% end %>
		<% if !@event.content_five.nil?%>
			5.<%= @event.content_five %><br>
		<% end %>
	</div>

	<div class="color-white padding-20 margin-30">
		<div class="mobile_company_title">
			<%= @tag.tag_name %>とは
		</div>
		<p class="mobile_company_text">
			<%=@tag.tag_body %>
		</p>
	</div>
	<div class="color-white padding-20 margin-30">
		<div class="mobile_company_title">
			開催場所
		</div>
		<b>ツナグオフィス</b><br>
		<b>〒461-0004
	　	名古屋市東区葵3丁目15-31　千種第2ビル4F
		</b>

	</div>


