<div class="container-fluid">
	<% if admin_signed_in? %>
	<%= link_to "編集する", edit_event_path(@event.id), class: "btn btn-success btn-lg btn-block" %>
	<%= link_to "削除する", event_path(@event.id), method: :delete, class: "btn btn-danger btn-lg btn-block", data: { confirm: '削除しますか？' } %>
	<% end %>

	<div class="row">
		<% @sub_tags.each do |st| %>
			<div class="col-md-4 col-lg-3">
				<div style=" margin: 5px;">
				<div class="sub_tag_outer">
					<div class="sub_tag">
						<div style="padding: 5px; margin: 10px;">
							<%= st.sub_tag_name %>
						</div>
					</div>
				</div>
				</div>
			</div>
		<%end%>
	</div>

	<div class="row event_show_parent event_show_padding">
		<div class="event_show_title"></div>
		<div class="col-sm-12 col-md-12 title_center-bold">
			<p class="event_show_event_name">
				<%= @event.event_name %></p>
			<p class="event_show_event_title">
				<%= @event.event_title %>
			</p>
		</div><!-- ./col-sm-12 col-md-12 -->
	</div><!-- ./event_show_title -->
	<div>
	</div>
	<div class="row event_show_parent event_show_padding">
		<div lass="col-lg-7">
			<% if @event.event_show_image.attached? %>
		        <%= image_tag @event.event_show_image ,class: "card-img-top" ,class: "card-img-top img-event-show"%>
		    <% end %>
		</div>
		<div class="row col-lg-5">
			<div class="col-sm-12 col-md-12 title_center-bold">
				<p class="event_show_event_title">
				<% if @event.tag.uuid == 1 %>
					【<%= @event.event_company_name %>って何してる会社？】
				<% elsif  @event.tag.uuid == 2 %>
					【今回のガクショクは？】
				<% elsif  @event.tag.uuid == 3 %>
					【今回のキャリアコネクションは？】
				<% else %>
					【<%= @event.event_company_name %>って何してるの？】
				<% end %>
				</p>
				<p id="event-description">
					<%= @event.event_description %>
				</p>
			</div><!-- ./col-sm-8 col-md-8 -->
		</div>
		<!-- <div class="event_show_company_detail"></div> -->		
	</div><!-- ./row event_show_parent event_show_padding -->
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-md-4 col-lg-4">
			<% if @event.president_image.attached? %>
			    <%= image_tag @event.president_image.variant(resize:'300x300').processed%>
			<% end %>
		</div>
		<div class="col-md-8 col-lg-6">
			<div class="event_company_name">
			   	<%= @event.event_company_name %>
			</div>
			<div class="event_position">
				<%= @event.position %>					
			</div>
			<div class="event_president">
		    	<%= @event.event_president %>
			</div>

			<div class="birth_font">
				<% if @event.tag.uuid == 1 %>
				   	会社設立年度&ensp; <%= @event.event_president_birth_day %>
				<% elsif @event.tag.uuid == 2 %>
				    誕生日&ensp; <%= @event.event_president_birth_day %>
				<% end %>
			</div>
			<div class="fav_words">
				座右の銘<br>
			   	「<%= @event.event_motto %>」
			</div>
		</div>
	</div>

	<div class="event_details_box">
		<div class="row event_detail_padding">
			<div class="col-sm-6 col-md-6 event_detail_fonts">
				<p class="font_details">【開催日】</p>
				<p class="font_details">&ensp;&ensp;<%= @event.event_time %></p>
				<p class="font_details">&ensp;&ensp;<%= @event.event_time_detail %></p>
				<h class="font_details">※当日の進行により多少前後する場合がございます</h>
				<p><%= @event.event_location %></p>
			</div><!-- ./col-sm-6 col-md-6 event_detail_fonts -->
			<div class="col-sm-6 col-md-6 event_detail_fonts">
				<div>
					<h class="font_details">【参加費】</h>
					<% if @event.event_cost == 0 || @event.event_cost == "無料" %>
						<p  class="font_details" style="color: red;">&ensp;&ensp;<%= @event.event_cost %></p>
					<% else %>
						<p class="font_details">&ensp;&ensp;￥：<%= @event.event_cost %></p>
					<% end %>
					<p class="font_details">&ensp;&ensp;食事付き</p>
				</div>
				<div>
					<h class="font_details">【募集人数】</h>
					<% if @event.event_population == nil %>
						<p class="font_details">&ensp;&ensp;未定</p>
					<% else %>
						<p class="font_details">&ensp;&ensp;約<%= @event.event_population %>名</p>
					<% end %>
				</div>
			</div><!-- ./col-sm-6 col-md-6 event_detail_fonts -->

			<%= link_to "申し込む", new_event_customer_path ,class: "btn btn-primary btn-lg btn-block"  %>

		</div><!-- ./row event_detail_padding -->
	</div><!-- ./event_details_box -->
	
	<div class="row event_show_parent event_show_padding">
		<div class="event_show_tag_desc"></div>
		<div class="row">
		<div class="col-sm-2 col-md-2"></div>
			<div class="col-sm-8 col-md-8">
				<% if @tag.tag_name == "シャショク" %>
					<div class="tag_desc">【シャショクとは】</div>
						<p id="tag_info"><%= @tag.tag_info %></p>
						<p id="tag_body"><%= @tag.tag_body %></p>
					</div>
				<% elsif @tag.tag_name == "ガクショク" %>
					<div class="tag_desc">【ガクショクとは】</div>
						<p id="tag_info"><%= @tag.tag_info %></p>
						<p id="tag_body"><%= @tag.tag_body %></p>
					</div>
				<% elsif @tag.tag_name == "キャリアコネクション" %>
					<div class="tag_desc">【キャリアコネクションとは】</div>
						<p id="tag_info"><%= @tag.tag_info %></p>
						<p id="tag_body"><%= @tag.tag_body %></p>
					</div>
				<% elsif @tag.tag_name == "スタートアップ" %>
					<div class="tag_desc">【スタートアップとは】</div>
						<p id="tag_info"><%= @tag.tag_info %></p>
						<p id="tag_body"><%= @tag.tag_body %></p>
					</div>
				<% elsif @tag == nil %>
				<% end %>
			</div>
		<div class="col-sm-2 col-md-2"></div>
	</div>

</div><!-- ./container fluid -->





