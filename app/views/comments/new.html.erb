<%= @question.title  %>

<%= @question.q_body  %>

<%= form_for @comment, url: question_comments_path, method: :post do |f| %>
	<div class="container">
	<div class="col-md-2"></div>
	<div class="col-md-8">
	<div><%= f.label :回答 %></div>
	<%= f.text_field :c_body, placeholder: "", :size => "80%" %>
	<% f.number_field :question_id, value: params[:question_id] %>
	<% if student_signed_in?  %>
		<% f.number_field :question_id, value: current_student.id %>
	<% elsif company_signed_in? %>
		<% f.number_field :question_id, value: current_company.id %>
	<% end %>

	<%end%>
</div>