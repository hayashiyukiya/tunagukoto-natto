<div class="container">
	<% if admin_signed_in? %>
		<% @mini_events.each do |me| %>
			<h1><%= link_to "#{me.title}", mini_event_path(me.id) %></h1>
			<p>参加報酬ポイント: <%= me.get_point %></p>
			<p>参加消費ポイント: <%= me.pay_point %></p>			
			<% @mini_events_customers = MiniEventCustomer.where(mini_event_id: me.id)%>
			<div class="col-12 ">
			    <table class="table">
			        <thead>
			            <tr>
			                <th>氏名</th>
			                <th>メールアドレス</th>
			                <th>所属</th>
			                <th>電話番号</th>
			                <th></th>
			            </tr>
			        </thead>
			        <% @mini_events_customers.each do |mec| %>
				        <tbody>
				            <tr>
				                <td><%= mec.name %></td>
				                <td><%= mec.email %></td>
				                <td><%= mec.school.school_name %></td>
				                <td><%= mec.phone_num %></td>
				                <td>
				                <% @mini_event_apply_tag = MiniEventApplyTag.where(student_id: mec.student_id).where(mini_event_id: me.id) %>
				                <% @mini_event_apply_tag.length != 0 %>
				                <% tag = @mini_event_apply_tag.first %>
				                <% unless tag.nil? %>
				                <!-- 新規機能追加に基づき、has_paidカラムが空のものがある -->
					                <% if tag.has_paid %>
					                	<div>参加費を受け取りました</div>
					                <% else %>
								        <div><%= link_to "参加費を受け取る",mini_event_apply_tag_path(id: tag.id, pay_method: "cash"), method: :patch, class: "btn btn-primary", data: { confirm: '参加費を受け取りました' } %></div>
									    <div><%= link_to "参加費をポイント清算します",mini_event_apply_tag_path(tag.id,pay_method: "point"), method: :patch, class: "btn btn-primary", data: { confirm: 'ポイントを消費します' } %></div>				        
					                <% end %>
				                <% end %>
				            </td>
				                <% if !mec.check %>
					                <td><%= link_to "参加を確認しました", update_point_path(mec.id), method: :patch, class: "btn btn-primary"%>
					                </td>
				                <% else %>
					                <td><%= link_to "参加を確認を取り消す", rollback_point_path(mec.id), method: :patch, class: "btn btn-danger"%>
					                </td>
				                <% end %>
				            </tr>
				        </tbody>
			        <% end %>
			    </table>
			    <div>
			    	参加者メールアドレス一覧<br>
			    	<% @mini_events_customers.each do |mec| %>
			    		<%= mec.email %>
			    	<% end %>
			    	<br>
			    	<%= link_to "メールを一斉送信する", home_mini_event_send_mail_path(me.id),method: :post,  class: "btn btn-danger" %>
			    </div>
		    </div>
		<% end %>
	<% else %>
		<h1 style="text-align: center; font-weight: 900;">404 Page Not Found</h1>
		<div class="padding_full"></div>
	<% end %>
</div>

  
