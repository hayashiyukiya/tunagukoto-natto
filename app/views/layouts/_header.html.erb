<!-- ヘッダー部分 -->
<!-- navbar-light bg-lightで色を指定 -->
<% if admin_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= render 'layouts/header_admin' %>
    </nav>
<% elsif student_signed_in? %>
    <div class="header">
        <div class="inner-header">
            <span class="right-padding"><%= image_tag'na.png',class: "natto" %></span>
            <span class="header-right">
                <div class="guest">ようこそ
                    <%= current_student.first_name %>さん
                </div>
                <div class="guest">
                    <%= link_to "▶︎ マイページ", student_page_path(current_student.id) %>
                </div>
                <div class="guest">
                    <%= link_to "▶︎ ログアウト", destroy_student_session_path , method: :delete %>
                </div>
                <div class="guest">
                    <%= link_to "ツナグコトHP", 'http://tunagu.or.jp/', class: "tunagu-header" %></div>
            </span>
        </div>
    </div>

<% else %>
    <div class="header">
        <div class="inner-header">
            <span class="right-padding"><%= image_tag'na.png',class: "natto" %></span>
            <span class="header-right">
                <div class="guest">ようこそゲストさん</div>
                <div class="guest">
                    <%= link_to "▶︎ ログイン・学生登録", new_student_registration_path %></div>
                <div class="guest">
                    <%= link_to "ツナグコトHP", 'http://tunagu.or.jp/', class: "tunagu-header" %></div>
            </span>
        </div>
    </div>
<% end %>